            <TextField fx:id="licenseField" layoutX="14.0" layoutY="54.0" promptText="license" />
            <TextField fx:id="vehicleTypeField" layoutX="14.0" layoutY="94.0" promptText="vehicleType" />
         </children>
      </AnchorPane>
      <TextField fx:id="addressField" layoutX="45.0" layoutY="320.0" promptText="address" />
