                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="allChats" layoutX="20.0" layoutY="14.0" prefHeight="324.0" prefWidth="227.0" />
                        <ListView fx:id="chatMessages" layoutX="259.0" layoutY="14.0" prefHeight="324.0" prefWidth="227.0" />
                        <Button layoutX="571.0" layoutY="164.0" mnemonicParsing="false" onAction="#updateChat" text="Update Chat" />
                     </children></AnchorPane>
              </content>
