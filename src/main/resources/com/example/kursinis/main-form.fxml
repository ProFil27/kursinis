                <AnchorPane fx:id="foodPane" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="cusineList" layoutX="14.0" layoutY="32.0" prefHeight="287.0" prefWidth="252.0" />
                        <Label layoutX="14.0" layoutY="14.0" text="My Menu" />
                        <TextField fx:id="titleCuisineField" layoutX="288.0" layoutY="32.0" prefHeight="25.0" prefWidth="194.0" />
